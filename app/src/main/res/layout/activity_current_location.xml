<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="si.inova.zimskasola.CurrentLocationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_progressbar_screen"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <ProgressBar android:layout_width="28dp" android:layout_height="28dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:indeterminateTint="#ffffff"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_companyInfo"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="56dp" android:background="#000000">
        <TextView android:id="@+id/tv_companyName" android:textColor="#ffffff" android:textSize="15sp"
                  android:fontFamily="@font/montserratextrabold" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tv_location" android:textColor="#ffffff" android:textSize="13sp"
                  android:fontFamily="@font/montserratmedium" app:layout_constraintTop_toTopOf="@id/tv_companyName"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/cl_locationInfo"
            app:layout_constraintTop_toBottomOf="@id/cl_companyInfo"
            android:layout_width="match_parent"
            android:layout_height="140dp">

        <LinearLayout android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginTop="56dp"
                      android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textColor="#000000" android:layout_marginTop="4dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:fontFamily="@font/montserratbold"
                      android:textSize="13sp" android:text="@string/nahajas_se_v"/>
            <TextView android:textColor="#000000" android:layout_marginTop="4dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:fontFamily="@font/merriweatherbolditalic"
                      android:textSize="28sp" android:id="@+id/tv_roomName"/>
            <TextView android:textColor="#000000" android:layout_marginTop="4dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:fontFamily="@font/montserratregular"
                      android:textSize="13sp" android:id="@+id/tv_roomPosition"/>
        </LinearLayout>

        <ImageView android:id="@+id/iv_roomImage" android:layout_width="140dp" android:layout_height="140dp"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:layout_marginTop="16dp"
          android:id="@+id/view_horizontalLine"
          app:layout_constraintTop_toBottomOf="@id/cl_locationInfo"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#e5e5e5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    <ListView android:id="@+id/lv_currentLocation_items" app:layout_constraintTop_toBottomOf="@+id/view_horizontalLine"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="16dp"
              android:paddingRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>