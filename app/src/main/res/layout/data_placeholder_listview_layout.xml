<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout android:id="@+id/ll_textGroup" android:orientation="vertical"
                  app:layout_constraintEnd_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                  android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="32dp">
        <TextView android:id="@+id/tv_type" android:textColor="#000000" android:fontFamily="@font/montserratbold"
                  android:background="@color/background"
                  android:textSize="13sp" android:layout_width="189dp" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tv_title" android:layout_marginTop="4dp" android:textColor="#000000"
                  android:background="@color/background"
                  android:fontFamily="@font/merriweatherregular" android:textSize="18sp"
                  android:layout_width="120dp" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tv_subtitle" android:layout_marginTop="4dp" android:textColor="#000000"
                  android:background="@color/background"
                  android:fontFamily="@font/montserratregular" android:textSize="13sp"
                  android:layout_width="217dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_typeIcon" app:layout_constraintStart_toEndOf="@id/ll_textGroup"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
               android:background="@color/background"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_width="26dp"
               android:layout_height="26dp"/>
    <View android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/ll_textGroup"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#e5e5e5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>